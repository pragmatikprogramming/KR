@{
    ViewBag.Title = "Send Resume";
    Layout = "~/Views/Shared/KRLayout.cshtml";
}

<div class="header">
    <h1 class="page-title">Send Resume</h1>
</div>

<div class="container-fluid">
    <div class="row-fluid" style="margin-top: 5%">
        <form method="post" action="/Candidate/SendResume" id="SendResume" name="SendResume">
            <input type="hidden" name="Id" id="Id" value="@Model.Id" />

            <div class="formlabel">Job:</div>
            <div class="formfield">
                <select name="JobOrderId">
                    @foreach(var job in ViewBag.JobOrders)
                    {
                        <option value="@job.Id">@job.PositionTitle</option>
                    }
                </select>
            </div>
            <div class="clear">&nbsp;</div>

            <div class="formlabel">Email:</div>
            <div class="formfield"><textarea rows="10" cols="10" name="EmailText" id="EmailText">Attached please find the resume for @Model.FirstName @Model.LastName.  If you wish to speak further regarding this candidate please get in touch with me.</textarea></div>
            <div class="clear">&nbsp;</div>

            <div class="formlabel">&nbsp;</div>
            <div class="formfield"><button form="SendResume" class="btn btn-primary"><i class="icon-save"></i> Send</button></div>
            <div class="clear">&nbsp;</div>

        </form>
    </div>
</div>