@model IEnumerable<KR.Domain.Entities.User>
@{
    ViewBag.Title = "Admin - Manage Users";
    ViewBag.Name = HttpContext.Current.Session["Name"];
    Layout = "~/Views/Shared/KRLayout.cshtml";
}

<div class="header">
    <h2>Manage CMS Users</h2>
</div>
<script type="text/javascript">
    var myID = 0;

    function doWork(id)
    {
        myID = id;
    }

</script>
<div class="container-fluid">  
<div class="row-fluid">  
    <div class="row-fluid">            
        <div class="btn-toolbar">
            <a href="/User/Add"><button class="btn btn-primary"><i class="icon-plus"></i> New User</button></a>
            <div class="btn-group">
            </div>
        </div>
        <div class="well">

    <table class="table">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Username</th>
          <th style="width: 36px;"></th>
        </tr>
      </thead>
      <tbody>
       @foreach(var p in Model)
       {
           <tr>
                <td>@p.FirstName</td>
                <td>@p.LastName</td>
                <td>@p.UserName</td>
                <td>
                       <a href="/User/Edit/@p.Uid"><i class="icon-pencil"></i></a>
                       <a href="#myModal" role="button" data-toggle="modal" id="1" onclick="doWork(@p.Uid);"><i class="icon-remove"></i></a>
                </td>
           </tr>
       }
      </tbody>
    </table>


        </div>
        <div class="modal small hide fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
                <h3 id="myModalLabel">Delete Confirmation</h3>
            </div>
            <div class="modal-body">
                <p class="error-text"><i class="icon-warning-sign modal-icon"></i>Are you sure you want to delete the User?</p>
            </div>

            <div class="modal-footer">
                <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
                <button class="btn btn-danger" data-dismiss="modal" onclick="document.location.href ='/User/Delete/' + myID;">Delete</button>
            </div>
        </div>
    </div>
</div>
