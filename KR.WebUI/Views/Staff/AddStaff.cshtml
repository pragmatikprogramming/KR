@{
    ViewBag.Title = "Add Staff";
    Layout = "~/Views/Shared/KRLayout.cshtml";
}

<div class="header">
    <h1 class="page-title">Add Staff</h1>
</div>

<div class="container-fluid">
    <div class="row-fluid" style="margin-top: 5%">
        <form method="post" action="/Staff/AddStaff" id="AddStaff" name="AddStaff">
            <div class="formlabel">Fisrt Name:</div>
            <div class="formfield"><input type="text" maxlength="255" value="@Model.FirstName" name="FirstName" id="FirstName" /></div>
            <div class="clear"></div>

            <div class="formlabel">Last Name:</div>
            <div class="formfield"><input type="text" maxlength="255" value="@Model.LastName" name="LastName" id="LastName" /></div>
            <div class="clear"></div>

            <div class="formlabel">Email:</div>
            <div class="formfield"><input type="text" maxlength="255" value="@Model.Email" name="Email" id="Email" /></div>
            <div class="clear"></div>

            <div class="formlabel">Company:</div>
            <div class="formfield">
                <select name="CompanyId">
                    @foreach (var company in ViewBag.Companies)
                    {
                        <option value="@company.Id">@company.Name</option>
                    }
                </select>
            </div>
            <div class="clear"></div>

            <div class="formlabel">Title:</div>
            <div class="formfield"><input type="text" maxlength="255" value="@Model.Title" name="Title" id="Title" /></div>
            <div class="clear"></div>

            <div class="formlabel">&nbsp;</div>
            <div class="formfield"><button form="AddStaff" class="btn btn-primary"><i class="icon-save"></i> Save</button></div>
            <div class="clear">&nbsp;</div>
        </form>
    </div>
</div>